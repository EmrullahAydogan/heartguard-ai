# ============================================
# HeartGuard AI - Environment Configuration
# ============================================
# Copy this file: cp .env.example .env
# Then fill in your real Hugging Face token below.

# Hugging Face Token (REQUIRED - get yours at https://huggingface.co/settings/tokens)
HF_TOKEN=hf_your_token_here

# MedGemma Model Selection
MEDGEMMA_MODEL=google/medgemma-1.5-4b-it

# InfluxDB Configuration
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=heartguard2026
INFLUXDB_ORG=heartguard
INFLUXDB_BUCKET=heartguard
INFLUXDB_ADMIN_TOKEN=heartguard-super-secret-token

# Kafka Configuration
KAFKA_BROKER=kafka:9092
KAFKA_TOPIC_VITALS=chf.vitals
KAFKA_TOPIC_ALERTS=chf.alerts

# Producer Speed (demo = fast replay for demonstrations)
REPLAY_SPEED=demo
